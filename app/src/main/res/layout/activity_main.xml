<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="929dp"
        android:background="#F5F5DC"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tytul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A52A2A"
            android:text="Gra w kości. Autor: Michał Pacholski"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/rzut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D2691E"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="RZUĆ KOŚCMI" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/los1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:height="60dp"
                android:layout_margin="9dp"
                android:gravity="center"
                android:text="?" />

            <TextView
                android:id="@+id/los2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:height="60dp"
                android:layout_margin="9dp"
                android:gravity="center"
                android:text="?" />

            <TextView
                android:id="@+id/los3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:height="60dp"
                android:layout_margin="9dp"
                android:gravity="center"
                android:text="?" />

            <TextView
                android:id="@+id/los4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:height="60dp"
                android:layout_margin="9dp"
                android:gravity="center"
                android:text="?" />

            <TextView
                android:id="@+id/los5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:height="60dp"
                android:layout_margin="9dp"
                android:gravity="center"
                android:text="?" />

        </LinearLayout>

        <TextView
            android:id="@+id/suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Wynik tego losowania: 0" />

        <TextView
            android:id="@+id/sumaAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Wynik gry: 0" />

        <TextView
            android:id="@+id/iloscGier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Liczba rzutów: 0" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D2691E"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="RESET WYNIK" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>